@page "/login"
@layout LoginLayout
@inherits CaApp.Pages.LoginComponent

@using Radzen
@using Radzen.Blazor
@using CaApp.Models.ConData
@using Microsoft.AspNetCore.Identity;
@using CaApp.Models
@using Microsoft.AspNetCore.Authorization


<form method="post" action="account/login">
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Login">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenLogin AllowResetPassword="false" Register="@Login0Register">
        </RadzenLogin>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
</form>
