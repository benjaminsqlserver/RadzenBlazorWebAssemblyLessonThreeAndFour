{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Country Name",
                              "component": "CountryName",
                              "name": "CountryNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 255,
                              "type": "textbox",
                              "name": "CountryName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${country.CountryName}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CountryNameRequiredValidator",
                              "component": "CountryName",
                              "text": "CountryName is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Country",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "conData.updateCountry",
                        "parameters": [
                          {
                            "name": "CountryID",
                            "value": "${parameters.CountryID}"
                          },
                          {
                            "name": "Country",
                            "value": "${country}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${country}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "CaApp.Models.ConData.Country",
                  "data": "${country}",
                  "visible": "${country != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "conData.getCountryByCountryID",
        "parameters": [
          {
            "name": "CountryID",
            "value": "${parameters.CountryID}"
          }
        ],
        "then": [
          {
            "name": "country",
            "type": "set",
            "value": "${result}",
            "valueType": "CaApp.Models.ConData.Country"
          }
        ],
        "error": [],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Country",
  "access": [
    "Authenticated"
  ],
  "layout": "Main"
}